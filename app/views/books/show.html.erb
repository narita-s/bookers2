<body>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>
    <strong>Title:</strong>
    <%= @book.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @book.body %>
  </p>

  <%= link_to "Edit", edit_book_path(@book.id) %> |
  <%= link_to "Back", "/books" %>
  <% if @book.user == current_user %>
    <%= link_to "削除", book_path(@book), method: :delete %>
  <% end %>
</body>